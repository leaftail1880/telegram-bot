{
	"compilerOptions": {
		"alwaysStrict": true,
		"allowJs": true,
		"checkJs": true,

		"target": "es2022",
		"lib": ["ES2022"],
		"module": "Node16",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,

		"noImplicitAny": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["src/web"]
}
